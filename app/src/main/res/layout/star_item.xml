<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#F8F0EB">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="265dp"
        android:src="@drawable/banana"
        app:civ_border_color="#C19A6B"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/nom"
        android:layout_width="259dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="141dp"
        android:layout_marginTop="24dp"
        android:fontFamily="cursive"
        android:text="TextView"
        android:textSize="20dp" />

    <RatingBar
        android:id="@+id/star"
        style="@android:style/Widget.Material.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nom"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="65dp"
        android:accessibilityHeading="false"
        android:backgroundTint="@color/gumball_color_light"
        android:clickable="false"
        android:isIndicator="true"
        android:numStars="5"
        android:paddingBottom="15dp"
        android:progressTint="@color/gumball_color_light"
        android:secondaryProgressTint="@color/gumball_color_light"
        android:stepSize="0.1" />


</RelativeLayout>